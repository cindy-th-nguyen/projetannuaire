{% extends 'base.html.twig' %}

{% block title %}Annuaire
{% endblock %}

{% block body %}
    <div class="form-modify">
        <h1>Importer des données depuis un fichier CSV dans la base de données</h1>
        <div id="response" class=""></div>
        <div class="outer-scontainer">
            <div class="row">
                <form class="form-horizontal" action="{{ path('import-csv') }}" method="post" name="frmCSVImport"
                      id="frmCSVImport" enctype="multipart/form-data">
                    <div class="input-row">
                        <label class="col-md-4 control-label">Choisir un fichier CSV</label>
                        <br>
                        <br>
                        <input type="file" name="file" id="file" accept=".csv">
                        <br>
                        <br>
                        <button type="submit" id="submit" name="import" class="btn-submit">Importer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}